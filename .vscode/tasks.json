{
	"version": "2.0.0",
	"windows": {
		"options": {
			"shell": {
				"executable": "cmd.exe",
				"args": [
					"/d", "/c"
				]
			}
		}
	},
	"tasks": [
		{
			"type": "shell",
			"label": "NVCC Run",
			"windows": {
				"command": "chcp 65001 && nvcc"
			},
			"command": "nvcc",
			"args": [
				"-lineinfo",
				"${file}",
				"-o",
				".//dist//${fileBasenameNoExtension}",
				"-I3rd//cutlass",
				"-std=c++17",
				"--expt-relaxed-constexpr",
				"-run"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"clear": false,
				"panel": "dedicated",
			},
			"group": {
				"kind": "none",
				"isDefault": true
			},
			"detail": "compiler: nvcc"
		},
		{
			"type": "shell",
			"label": "Nsight Compute",
			"windows": {
				"command": "ncu"
			},
			"command": "ncu",
			"args": [
				"--set",
				"full",
				"--open-in-ui",
				"-k",
				"\"regex:^(?!check|test|valid).*\"", //过滤掉用来验证结果的kernel
				"--target-processes",
				"all",
				".//dist//${fileBasenameNoExtension}",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"presentation": {
				"echo": true,

			},
			"group": {
				"kind": "none",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "CMake Build ALL",
			"command": "cmake -S . -B build && cmake --build build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"clear": true,
				"panel": "dedicated",
				"group": "cmake"
			},
			"group": {
				// 任务分组，因为是tasks而不是task，意味着可以连着执行很多任务
                // 在build组的任务们，可以通过在Command Palette(F1) 输入run build task来运行
                // 当然，如果任务分组是test，你就可以用run test task来运行 
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: cmake build"
		},
		{
			"type": "shell",
			"label": "Run Build File",
			"windows": {
				"command": "chcp 65001 && ${workspaceFolder}/dist/${fileBasenameNoExtension}"
			},
			"command": "${workspaceFolder}/dist/${fileBasenameNoExtension}",
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"clear": false,
				"panel": "dedicated",
				"group": "cmake"
			},
			"detail": "compiler: cmake build"
		},
	]
}